
.message
  .upper-info
    %p.upper-info__user
      = message.user.name
    %p.upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.message__text
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class:'message__text__image' if message.image.present?